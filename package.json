{
  "name": "pricingNotification",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.15",
    "@sap/jobs-client": "^1.7.42",
    "@sap/xsenv": "^3.4.0",
    "@sap/xssec": "^3.2.14",
    "axios": "^1.1.3",
    "passport": "^0.6.0",
    "sap-cf-axios": "^0.3.6",
    "@sap/cds": "^6.3.1",
    "@sap/hana-client": "^2.13.22",
    "@sap/textbundle": "^4.1.0",
    "express": "^4.18.1",
    "hdb": "^0.19.5"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.12",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "watch-princingui": "cds watch --open princingui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy pricingNotification --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "passport": {
          "strategy": "JWT"
        }
      },
      "CPIDest": {
        "kind": "destination",
        "credentials": {
          "destination": "CPIDEV"
        }
      },
      "data": {
        "kind": "odata",
        "credentials": {
          "destination": "ds4rt"
        }
      },
      "testSys": {
        "kind": "odata",
        "credentials": {
          "destination": "ds4rt_120"
        }
      }
    }
  },
  "sapux": [
    "app/princingui"
  ]
}
