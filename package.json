{
  "name": "pricingNotificationV2",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap/cds": "^6.1.0",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.4",
    "@sap/hana-client": "^2.13.22",
    "@sap/hdbext": "^7.6.5",
    "@sap/jobs-client": "^1.7.42",
    "@sap/textbundle": "^4.1.0",
    "@sap/xsenv": "^3.3.2",
    "@sap/xssec": "^3.2.13",
    "axios": "^0.27.2",
    "cf-nodejs-logging-support": "^6.13.2",
    "cfenv": "^1.2.4",
    "express": "^4.18.1",
    "hdb": "^0.19.5",
    "passport": "^0.6.0",
    "sap-cf-axios": "^0.3.6",
    "sap-hdbext-promisfied": "^2.202208.1",
    "username": "^6.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.12",
    "qunit": "^2.19.4",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "watch-pricingui": "cds watch --open pricingui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy pricingNotificationV2 --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "test": "qunit",
    "unit-tests":"qunit"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "passport": {
          "strategy": "JWT"
        }
      },
      "CPIDest": {
        "kind": "destination",
        "credentials": {
          "destination": "CPI"
        }
      },
      "data": {
        "kind": "odata",
        "credentials": {
          "destination": "s4rt"
        }
      },
      "dest": {
        "kind": "destination",
        "credentials": {
          "destination": "s4rt"
        }
      },
      "connectivity": {
        "kind": "connectivity",
        "credentials": {
          "destination": "pricingNotificationV2-connectivity"
        }
      },
      "testSys": {
        "kind": "odata",
        "credentials": {
          "destination": "s4rt_basic"
        }
      }
    }
  },
  "sapux": [
    "app/pricingui"
  ]
}
