<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover2"
		showHeader="false"
		contentWidth="20rem"
		contentHeight="15rem"
		placement="Bottom"
		ariaLabelledBy="master-title">
		<NavContainer>
			<Page
				class="sapUiResponsivePadding--header"
				title="{i18n>emails}">
				<List items="{/}" >
					<StandardListItem
						title="{email}"/>
				</List>
			</Page>

		</NavContainer>
	</Popover>
</core:FragmentDefinition>