<core:FragmentDefinition 
     xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="addProduct" title="{i18n>addProduct}" afterClose=".onValueProductAfterClose">
     <f:SimpleForm editable="true" layout="ColumnLayout" title="" columnsXL="2" columnsL="1" columnsM="1">
        <f:content>
            <Label text="{i18n>productID}" required="true"/>
             <Input id="idInputProductID" maxLength="10" valueHelpRequest="onHandleValueHelpProduct" width="80%" showValueHelp="true" valueHelpOnly="true" />
            <Label text="{i18n>productName}" />
            <Input id="idInputProductName"  maxLength="40" width="80%" />
            <Label text="{i18n>shipTo}" />
            <Text id="idProdShCount"  />
            
        </f:content>  
    </f:SimpleForm>  
      <beginButton>
            <Button text="{i18n>save}" type="Emphasized" press="onPressProductSave" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onProductClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>    