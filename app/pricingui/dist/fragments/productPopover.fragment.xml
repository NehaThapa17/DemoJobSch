<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover id="myPopover" showHeader="false" contentWidth="20rem" contentHeight="15rem" placement="Bottom" ariaLabelledBy="master-title">
        <NavContainer>
            <Page class="sapUiResponsivePadding--header" title="{i18n>products}">
                <List items="{/results}">
                    <StandardListItem title="{Product}" description="{ProductName}" />
                </List>
            </Page>
        </NavContainer>
    </Popover>
</core:FragmentDefinition>
