<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
    <Dialog id="addEmail" title="{i18n>addCCEmail}" afterClose="onValueEmailAfterClose" contentWidth="100%">
        <content>
            <MultiInput id="multiInputemail" change="onEmailChangeCC" width="90%" showValueHelp="false" />
        </content>
        <beginButton>
            <Button text="{i18n>save}" type="Emphasized" press="onCCEmailSave" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCCEmailClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
