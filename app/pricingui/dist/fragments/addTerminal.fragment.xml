<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Dialog id="addTerminal" title="{i18n>addTerminal}" afterClose=".onValueTerminalAfterClose">
        <f:SimpleForm editable="true" layout="ColumnLayout" title="" columnsXL="2" columnsL="1" columnsM="1">
            <f:content>
                <Label text="{i18n>terminalID}" required="true" />
                <Input id="idInputTerminalID" maxLength="10" valueHelpRequest="onHandleValueHelpTerminal" width="360px" showValueHelp="true" valueHelpOnly="true" />
                <Label text="{i18n>terminalName}" required="true" />
                <Input id="idInputTerminalName" maxLength="40" width="360px" />
                <Label text="{i18n>shipTo}" />
                <Text id="idTxtShCount" text="3" />
                <!-- <CheckBox id="idCheckBoxDaily" enabled="true" /> -->
                <!-- <Label text="{i18n>onDemandlbl}" />
                <CheckBox id="idCheckBoxOnDemand" enabled="true" /> -->
            </f:content>
        </f:SimpleForm>
        <beginButton>
            <Button text="{i18n>save}" type="Emphasized" press="onPressTerminalSave" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onTerminalClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
