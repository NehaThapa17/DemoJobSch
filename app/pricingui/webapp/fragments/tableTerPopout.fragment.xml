<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
    <Dialog id="terTable" title="{i18n>terminal}">
        <Table class="sapUiSizeCompact" id="idTerTablePopout" selectionChange="singlemode" mode="SingleSelectMaster" width="auto" sticky="ColumnHeaders,HeaderToolbar" growing="true" growingScrollToLoad="true" growingThreshold="8" items="{oModel>/TerminalData}">
            <headerToolbar>
                <Toolbar>
                    <SearchField width="50%" change="onSearchTerminalPop" />
                    <ToolbarSpacer />
                    <Button icon="sap-icon://edit" tooltip="{i18n>editTerminal}" press="handleEditTerminalPopout" />
                    <Button icon="sap-icon://delete" tooltip="{i18n>delT}" press="onDeleteTerminalPopout" />
                    <Button tooltip="{i18n>unBind}" icon="sap-icon://broken-link" press="onUnbindTerminalPopout" />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <header>
                        <Text text="{i18n>terminalID}" />
                    </header>
                </Column>
                <Column demandPopin="true" hAlign="Begin">
                    <header>
                        <Text text="{i18n>terminalName}" />
                    </header>
                </Column>
                <Column hAlign="Center">
                    <header>
                        <Text text="{i18n>shipTo}" />
                    </header>
                </Column>
                <!-- <Column hAlign="Center">
                    <header>
                        <Text text="{i18n>daily}" />
                    </header>
                </Column>
                <Column hAlign="Begin" >
                    <header>
                        <Text text="{i18n>onDemandlbl}" />
                    </header>
                </Column> -->
            </columns>
            <ColumnListItem>
                <Text text="{oModel>Terminal}" />
                <Text text="{oModel>TerminalName}" />
                <ObjectStatus text="{oModel>ShiptoCount}" />
                <!-- <ObjectStatus icon="{path:'oModel>DailyJob', formatter: '.formatter.getIconOrder'}" />
                <ObjectStatus icon="{path:'oModel>OnDemandJob', formatter: '.formatter.getIconOrder'}" />  -->
            </ColumnListItem>
        </Table>
        <beginButton>
            <Button text="{i18n>btnAddNew}" type="Emphasized" press="handleTerminalSelectDialogPress" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCloseTer" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
