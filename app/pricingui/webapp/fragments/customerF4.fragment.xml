<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
      <TableSelectDialog noDataText="{i18n>cusPlcHolder}" contentWidth="50%" title="{i18n>customer}" search=".handleSearch" confirm=".handleConfirm" cancel=".handleClose" items="{oCustModel>/CustValHelp}">
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{oCustModel>Customer}" text="{oCustModel>CustomerName}" />
                    <ObjectIdentifier title="{oCustModel>Shipto}" text="{oCustModel>ShiptoName}" />
                </cells>
            </ColumnListItem>
            <columns>
                <Column mergeDuplicates="true">
                    <header>
                        <Text text="{i18n>customer}" />
                    </header>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Begin">
                    <header>
                        <Text text="{i18n>shipTo}" />
                    </header>
                </Column>
            </columns>
        </TableSelectDialog>
</core:FragmentDefinition>
