<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
      <TableSelectDialog noDataText="No Customer Found" contentWidth="50%" title="Customer" search=".handleSearch" confirm=".handleConfirm" cancel=".handleClose" items="{oCustModel>/CustValHelp}">
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{oCustModel>Customer}" text="{oCustModel>CustomerName}" />
                    <ObjectIdentifier title="{oCustModel>Shipto}" text="{oCustModel>ShiptoName}" />
                </cells>
            </ColumnListItem>
            <columns>
                <Column mergeDuplicates="true">
                    <header>
                        <Text text="Customer" />
                    </header>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Begin">
                    <header>
                        <Text text="Ship-to" />
                    </header>
                </Column>
            </columns>
        </TableSelectDialog>
</core:FragmentDefinition>
