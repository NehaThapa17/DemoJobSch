<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core">
    <Dialog id="addTerminal" title="Add Terminal" afterClose=".onValueTerminalAfterClose">
     <f:SimpleForm editable="true" layout="ColumnLayout" title="" columnsXL="2" columnsL="1" columnsM="1">
        <f:content>
            <Label text="Terminal ID" required="true"/>
            <Input id="idInputTerminalID" maxLength="10" valueHelpRequest="onHandleValueHelpTerminal" width="360px" showValueHelp="true" valueHelpOnly="true" />
            <Label text="Terminal Name" required="true"/>
            <Input id="idInputTerminalName"  maxLength="40" width="360px" />
            <Label text="Daily" />
            <CheckBox id="idCheckBoxDaily" enabled="true"></CheckBox>
             <Label text="On Demand" />
            <CheckBox id="idCheckBoxOnDemand" enabled="true"></CheckBox>
            
        </f:content>  
    </f:SimpleForm>  
      <beginButton>
            <Button text="Save" type="Emphasized" press="onPressTerminalSave" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onTerminalClose"  />
        </endButton>
    </Dialog>
</core:FragmentDefinition>    