<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
    <Dialog id="terTable" title="Terminal">
        <Table class="sapUiSizeCompact" id="idTerTablePopout" selectionChange="singlemode" 
        mode="SingleSelectMaster" width="auto" sticky="ColumnHeaders,HeaderToolbar" growing="true" growingScrollToLoad="true" growingThreshold="8" items="{oModel>/TerminalData}">
            <headerToolbar>
                <Toolbar>
                    <SearchField width="50%" change="onSearchTerminalPop" />
                    <ToolbarSpacer />
                    <Button icon="sap-icon://edit" press="handleEditTerminalPopout" />
                    <Button icon="sap-icon://delete" press="onDeleteTerminalPopout" />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column >
                    <header>
                        <Text text="Terminal ID " />
                    </header>
                </Column>
                <Column demandPopin="true" hAlign="Begin" >
                    <header>
                        <Text text="Terminal Name" />
                    </header>
                </Column>
                <Column hAlign="Center">
                    <header>
                        <Text text="Daily" />
                    </header>
                </Column>
                <Column hAlign="Begin" >
                    <header>
                        <Text text="On-Demand" />
                    </header>
                </Column>
            </columns>
            <ColumnListItem>
                <Text text="{oModel>Terminal}" />
                <Text text="{oModel>TerminalName}" />
                <ObjectStatus icon="{path:'oModel>DailyJob', formatter: '.formatter.getIconOrder'}" />
                <ObjectStatus icon="{path:'oModel>OnDemandJob', formatter: '.formatter.getIconOrder'}" />
            </ColumnListItem>
        </Table>
        <beginButton>
            <Button text="Add New" type="Emphasized" press="onCreateCustomer" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseTer" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
