<core:FragmentDefinition xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog  title="Products" ok=".onValueHelpOkPressProd" cancel=".onValueHelpCancelPressProd" 
    supportRanges="false"  key="Product" descriptionKey="ProductName" >
        <filterBar>
            <fb:FilterBar advancedMode="true" search=".onFilterBarSearchProd" isRunningInValueHelpDialog="true">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="Product" label="Product ID" visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Product ID" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="ProductName" label="Product Name" visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Product Name" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
