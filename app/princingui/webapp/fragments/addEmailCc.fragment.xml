<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Dialog id="addEmail" title="{i18n>addCCEmail}" afterClose="onValueEmailAfterClose" >
     <f:SimpleForm editable="true" layout="ColumnLayout" title="" columnsXL="2" columnsL="2" columnsM="2">
        <f:content>
            <Label text="{i18n>ccEmail}" />
            <MultiInput id="multiInputemail"  change="onEmailChangeCC" width="600px" showValueHelp="false"></MultiInput>
        </f:content>  
    </f:SimpleForm>  
      <beginButton>
            <Button text="{i18n>save}" type="Emphasized" press="onCCEmailSave" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCCEmailClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>    