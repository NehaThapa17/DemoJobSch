<core:FragmentDefinition xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog  title="{i18n>customerSH}" ok=".onValueHelpOkPress" cancel=".onValueHelpCancelPress" 
    afterClose=".onValueHelpAfterClose" supportRanges="false" key="Customer" descriptionKey="ShipTo">
        <filterBar>
            <fb:FilterBar advancedMode="true" search=".onFilterBarSearch" isRunningInValueHelpDialog="true">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="CustomerId" label="{i18n>customerID}" visibleInFilterBar="false">
                        <fb:control>
                            <m:Input name="{i18n>customerID}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="Name" label="{i18n>customerName}" visibleInFilterBar="false">
                        <fb:control>
                            <m:Input name="{i18n>customerName}" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="Ship-To" label="{i18n>shipTo}" visibleInFilterBar="false">
                        <fb:control>
                            <m:Input name="{i18n>shipTo}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
