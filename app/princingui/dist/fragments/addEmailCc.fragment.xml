<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core">
    <Dialog id="addEmail" title="Add CC Email" afterClose="onValueEmailAfterClose">
     <f:SimpleForm editable="true" layout="ColumnLayout" title="" columnsXL="2" columnsL="2" columnsM="2">
        <f:content>
            <Label text="CC Email" />
            <MultiInput id="multiInputemail"  change="onEmailChangeCC" width="500px" showValueHelp="false"></MultiInput>
        </f:content>  
    </f:SimpleForm>  
      <beginButton>
            <Button text="Save" type="Emphasized" press="onCCEmailSave" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCCEmailClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>    