<core:FragmentDefinition 
     xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core">
    <Dialog id="addProduct" title="Add Product" afterClose=".onValueProductAfterClose">
     <f:SimpleForm editable="true" layout="ColumnLayout" title="" columnsXL="2" columnsL="1" columnsM="1">
        <f:content>
            <Label text="Product ID" required="true"/>
             <Input id="idInputProductID" maxLength="10" valueHelpRequest="onHandleValueHelpProduct" width="360px" showValueHelp="true" valueHelpOnly="true" />
            <Label text="Product Name" />
            <Input id="idInputProductName"  maxLength="40" width="360px" />
            
        </f:content>  
    </f:SimpleForm>  
      <beginButton>
            <Button text="Save" type="Emphasized" press="onPressProductSave" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onProductClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>    